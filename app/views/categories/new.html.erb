<h1 align="center">Create new category</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">

            <%= render 'shared/errors', obj: @category %>

            <%= form_with(model: @category, local: true) do |f| %>

            <div class="form-group row">
                <%= f.label :name, class: "col-2 col-form-label" %><br/>
                <div class= "col-10">
                <%= f.text_field :name, class: "form-control", placeholder: "Enter category name" %>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <%= f.submit class: "btn btn-outline-info btn-lg" %>
            </div>

            <% end %>
        </div>
    </div>
</div>