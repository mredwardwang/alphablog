<div class="container">

    <div class="row justify-content-center">
        <div class="col-10">

            <h1 align="center">Sign up for Barstow Blog</h1>
            <%= render 'shared/errors', obj: @user %>

            <%= form_with(model: @user, local: true) do |f| %>

            <div class="form-group row">
                <%= f.label :username, class: "col-2 col-form-label" %><br/>
                <div class= "col-10">
                <%= f.text_field :username, class: "form-control", placeholder: "Enter username" %>
                </div>
            </div>

            <div class="form-group row">
                <%= f.label :email, class: "col-2 col-form-label" %><br/>
                <div class= "col-10">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
                </div>
            </div>

            <div class="form-group row">
                <%= f.label :password, class: "col-2 col-form-label" %><br/>
                <div class= "col-10">
                <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <%= f.submit "Sign up", class: "btn btn-outline-info btn-lg" %>
            </div>

            <% end %>
        </div>
    </div>
</div>
